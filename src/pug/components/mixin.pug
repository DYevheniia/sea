mixin cards(cardsOffer) 
    .col-lg-3.col-md-6.col-cm-12
        figure.cards-offer
            if cardsOffer.before
                a(href="#").green.absolute
            else 
                a(href="#").absolute
            figcaption 
                if cardsOffer.velo 
                    .wrap-img.velo
                        img(src=cardsOffer.img, alt=cardsOffer.alt)
                else
                    .wrap-img
                        img(src=cardsOffer.img, alt=cardsOffer.alt)
                .offer-text
                    h3.headerline #{cardsOffer.headerline}
                    p.desc #{cardsOffer.description}
                    .order-line.flex-between
                        p.price #{cardsOffer.price}
                        a(href="#").price #{cardsOffer.order}


