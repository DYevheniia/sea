mixin card(oneCard) 
    .col-lg-3.col-md-6.col-cm-12
        figure.cards
            if oneCard.before
                a(href="#").green.absolute
            else 
                a(href="#").absolute
            figcaption 
                .wrap-img
                    svg 
                        use(xlink:href=oneCard.svg)
                h3.headerline #{oneCard.headerline}
                p.price #{oneCard.price}
                p.des #{oneCard.description}



